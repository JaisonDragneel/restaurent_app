<script>
  function initMap() {
    var myLatLng = {lat: <%= @restaurent.latitude %>, lng: <%= @restaurent.longitude %>};

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 18,
      center: myLatLng
    });

    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCw1_gj8WySnylwLIiMgbGBFO65QdR76zA&callback=initMap" ></script>

<div class="ui container">
  <p id="notice"><%= notice %></p>
  <h1>
    <strong>Name:</strong>
    <%= @restaurent.name %>
  </h1>
  <p>
    <%= image_tag @restaurent.image.url(:medium) %>
  </p>
  <p>
    <strong>Address:</strong>
    <%= @restaurent.address %>
  </p>
  <p>
    <strong>latitude:</strong>
    <%= @restaurent.latitude %>
  </p>
  <p>
    <strong>longitude:</strong>
    <%= @restaurent.longitude %>
  </p>
  <% current_restaurent_id(@restaurent.id) %>

  <div id="map" style="height:400px; width:400px" ></div>
  <br>
  <% if current_user && current_user.role %>
    <%= link_to 'Edit', edit_restaurent_path(@restaurent) %> |
  <% end %>

  <%= link_to 'Back', restaurents_path %>

  <% if  @restaurent.reviews.any? %>
    <%= render 'table' %>
  <% else %>
    <h3>No reviews yet</h3>
  <% end %>

  <% if current_user && !current_user.role %><br>
    <td><%= link_to 'Write Review', new_review_path, class: 'ui primary button' %></td>
  <% end %>
</div>
