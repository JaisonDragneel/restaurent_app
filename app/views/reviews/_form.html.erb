<%= form_for @review, html: { multipart: true, class: "ui container form" } do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_field :review %>
  </div>

  <div class="field">
    <%= f.select :ratings, [ 1,2,3,4,5], :prompt => 'Select One' %>
  </div>

  <!-- , disabled: true if !current_user.reviews.pluck(:status) == true  -->
  <div class="actions">
    <%= f.submit class: "ui primary button" %>
  </div>
<% end %>
